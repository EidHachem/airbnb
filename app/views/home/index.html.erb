<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 sm:py-2 lg:max-w-7xl lg:px-8">

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
        <% @properties.each do |property| %>
      <div class="group relative">
        <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75">
            <%= image_tag 'jamie-whiffen-yXBeuNhmbNY-unsplash.jpg', class:"h-full w-full object-cover object-center lg:h-full lg:w-full" %>
        </div>
        <div class="mt-2 flex justify-between">
          <div>
            <h3 class="text-base font-medium text-balck">
              <a href="#">
                <span aria-hidden="true" class="absolute inset-0"></span>
                <%= property.city %>, <%= property.country %>
              </a>
            </h3>
            <p class="text-sm text-gray-500">100 kilometers away</p>
            <p class="text-sm text-gray-500">Sep 22-27</p>
            <p class="text-sm text-black"><span class="font-bold"><%= humanized_money_with_symbol(property.price) %></span> night</p>
          </div>
          <p class="text-sm font-medium text-gray-900"> 
            <i class="fa-sharp fa-solid fa-star" style="color: #000000;"></i>
            5.0</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>